      const body = document.body;
      const btns = document.querySelectorAll("[data-lang-btn]");

      btns.forEach((btn) => {
        btn.addEventListener("click", () => {
          const lang = btn.getAttribute("data-lang-btn");
          if (lang === "ja") {
            body.classList.remove("lang-en");
